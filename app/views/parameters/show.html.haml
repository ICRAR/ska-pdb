.page-content
  .parameter-detail
    - detail = @parameter.parameter_detail
    %h2= @parameter.name

    %div
      = label_tag :status
      = label_tag detail.status.name

    %div
      = label_tag :protected
      = check_box_tag :protected, '', @parameter.protected, :disabled => true

    %br

    %div
      = label_tag :case
      = label_tag detail.case.name

    %div
      = label_tag :kind
      = label_tag detail.kind.name

    %div
      = label_tag :param_class
      = label_tag detail.param_class.name

    %br

    %div
      = label_tag :unit
      = label_tag detail.unit

    %div
      = label_tag :expression
      = label_tag detail.expression

    %div
      = label_tag :source
      %div
        = detail.source

    %div
      = label_tag :description
      %div
        = detail.description
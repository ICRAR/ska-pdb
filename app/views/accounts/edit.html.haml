%h2
  Edit
  = @user.email
= form_for(@user, :url => account_path(@user.id)) do |f|

  %div
    = f.label :username
    = f.text_field :username

  %div
    = f.label :name
    = f.text_field :name

  %div
    = f.label :email
    = f.email_field :email

  %div
    = f.label :password
    = f.password_field :password
    %em (leave blank if you don't want to change it)

  %div
    = f.label :admin
    = f.check_box :admin

  %div
    = f.submit "Update"
    = link_to "Cancel", :action => 'index'

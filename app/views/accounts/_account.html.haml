%div
  = f.label :username
  = f.text_field :username, :editable => @user.admin?

%div
  = f.label :name
  = f.text_field :name

%div
  = f.label :email
  = f.email_field :email

%br

%div
  = f.label :password
  = f.password_field :password
- if edit
  .center
    %i{:style=>'font-size: small; color:#999'} (leave blank if you don't want to change it)

%br

%div
  = f.label :admin
  - if @user != current_user
    = f.check_box :admin
  - else
    = f.check_box :admin, { :disabled => 'disabled' }

%br

%div.center
  - if edit
    = f.submit "Update"
  - else
    = f.submit "Create"
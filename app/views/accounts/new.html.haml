%h2
  New User

- if @user.errors.any?
  %ul.errors
    - @user.errors.full_messages.each do |msg|
      %li= msg

= form_for(@user, :url => {:action => "create"} ) do |f|

  %div
    = f.label :username
    = f.text_field :username

  %div
    = f.label :name
    = f.text_field :name

  %div
    = f.label :email
    = f.email_field :email

  %div
    = f.label :password
    = f.password_field :password

  %div
    %br
    = label_tag "Permissions"

  %div
    = f.label :admin
    = f.check_box :admin

  %div
    %br
    = f.submit "Create"
    = link_to "Cancel", :action => 'index'

%h2 Export selected
.selected-parameters
  %table
    %thead
      %th Parameter
      %th
    %tbody
      - cart.line_items.each do |item|
        %tr
          %td
            = truncate(item.parameter.description, :length => 50)
          %td
            = button_to 'x', line_item_path(item.id), :method => :delete, :remote => true
.export-as
  Format:
  - formats = {"XML" => :xml, "PDF" => :pdf, "Java" => :java}
  = select("export_format", "", formats.collect { |label, param| [label, url_for(params.merge(:format => param))] })
= button_to_function "Export", "window.open($('#export_format_').val(), '_blank')", { :class => 'export-button'}
